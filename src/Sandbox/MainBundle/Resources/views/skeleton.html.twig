<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{{ title }} | CMF Sandbox{% endblock %}</title>

        {% block includes %}
            {% stylesheets
                '@SandboxMainBundle/Resources/public/bootstrap/css/bootstrap.min.css'
                '@SandboxMainBundle/Resources/public/bootstrap/css/bootstrap-responsive.min.css'
            %}
                <!--'@SandboxMainBundle/Resources/public/css/style.css'-->

            <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
            <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->

            <link rel="stylesheet" href="{{ asset_url }}" media="screen" type="text/css"/>
            {% endstylesheets %}

            {% if is_granted("IS_AUTHENTICATED_ANONYMOUSLY") %}
                {% stylesheets '@LiipVieBundle/Resources/public/vendor/hallo/examples/Aristo/jquery-ui-1.8.7.custom.css'
                            '@LiipVieBundle/Resources/public/css/halloLiipStyle.css'
                            '@LiipVieBundle/Resources/public/vendor/hallo/examples/overlay.css'
                            '@LiipVieBundle/Resources/halloplugins/image.css'
                            '@LiipVieBundle/Resources/halloplugins/link.css'
                %}
                    <link rel="stylesheet" href="{{ asset_url }}" media="screen" type="text/css"/>
                {% endstylesheets %}
                <link rel="stylesheet" href="/bundles/liipvie/vendor/create/themes/midgard-tags/tags.css" media="screen" type="text/css"/>
            {% endif %}
        {% endblock %}

        {% block top_scripts %}
        {% endblock %}
    </head>
    <body>
        <a href="https://github.com/symfony-cmf/cmf-sandbox"><img style="position: absolute; top: 0; right: 0; border: 0;" src="http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"/></a>
        <div class="container">

            <div id="top" class="row">
                <ul id="skiplinks" class="span9">
                    <li><a href="#main">Go to main content</a></li>
                    <li><a href="#navigation">Go to main navigation</a></li>
                </ul>
                <div id="language_selector" class="span3">
                    {% block language_selector %}
                        {% if page is defined %}
                            {% render "symfony_cmf_multilang_content.languageSelectorController:languagesAction" with {"id" : page.path, "languageUrls": languageUrls|default(false) } %}
                        {% endif %}
                    {% endblock %}
                </div>
            </div>

            <div class="row">
                <div class="span12">
                    {% block header %}
                        {% if is_granted("IS_AUTHENTICATED_ANONYMOUSLY") %}
                            <div id="userBar">
                                <div class="inner"><button class="saveButton">Saved</button></div>
                            </div>
                        {% endif %}

                        <div class="hero-unit">
                            <h1 id="logo-text"><a href="{{ asset('') }}">CMF Sandbox</a></h1>
                            <p id="slogan">Symfony2 Content Management Framework</p>
                        </div>
                    {% endblock %}
                </div>
            </div>

            <div class="row">
                <div id="navigation" class="span3 sidebar-nav">
                    {% block navigation %}
                        {{ knp_menu_render('main') }}
                    {% endblock %}
                </div>

                <div class="span9">
                    {% set currentItem = knp_menu_get('main').currentItem %}
                    {% if currentItem %}
                    <div id="breadcrumb">
                        <ul class="breadcrumb">
                            {% for title, url in currentItem.breadcrumbsArray %}
                                <li><a href="{{url}}">{{ title }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                    <div id="content">
                        <div class="inner">
                            {% block content %}
                            {% endblock %}
                        </div>
                    </div>

                    <div id="content_extra">
                        <div class="inner">
                            {% block content_extra %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>

            <hr/>

            <div id="footer">
                {% block footer %}
                    {% include "SymfonyCmfCoreBundle:Default:footer.html.twig" %}
                {% endblock %}
            </div>
        </div>

        {% block bottom_scripts %}
            {% if is_granted("IS_AUTHENTICATED_ANONYMOUSLY") %}
                {% render "liip_vie.controller.vie:includeJSFilesAction" %}

                {% javascripts
                            '@SandboxMainBundle/Resources/public/js/savebutton.js'
                            '@SandboxMainBundle/Resources/public/js/userbar.js'
                %}
                    <script src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% endif %}
        {% endblock %}
    </body>
</html>

